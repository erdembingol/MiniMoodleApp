<h1><b>Student List</b></h1>
<div class="blogs">
  <ul>
    <% @students.each do |student| %>
        <li>
          <div>
            <%= image_tag(student.profil_image, :size => "64x64", :alt => "Show Group") %>
            <br><b><%= student.student_number %> - <%= student.name %></b>
            <p>
                <%= student.email %>
            </p>
            <%= link_to :'Grade', :controller => :teacher_ui, :action => :grade, :student_no => student.student_number %>
          </div>
        </li>
    <% end %>
  </ul>
</div>