<div class="menu" style="margin-left: 300px;">
    <ul>
        <li><%= link_to :Login , :login_teacher, class: "nav_links"%></li>
        <li><%= link_to :Signup , :signup_teacher, class: "nav_links"%></li>
    </ul>
</div>

<div class="container_big">
    <%= form_tag(:action => 'signup_teacher_control') do %>
        <label>Name:</label>
        <%= text_field_tag(:name) %>

        <label>E-mail:</label>
        <%= text_field_tag(:email) %>

        <label>Password:</label>
        <%= password_field_tag(:password) %>

        <label>Profil Image (.jpg):</label>
        <%= file_field_tag(:profil_image) %>

        <%= submit_tag("Sign Up") %>
    <% end %>
</div>