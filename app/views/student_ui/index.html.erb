<h1><b> My Courses </b></h1>

<div class="blogs">
    <ul>
        <% @my_courses.each do |course| %>
            <li>
                <div>
                    <span class="time"> <%= course.created_at %> </span>
                    <h4><b><%= course.no %> - <%= course.name %></b></h4>
                    <p>
                        <%= course.explain %>
                    </p>
                    <p>
                        <br>
                        <b>Course Director :</b>  <%= Teacher.find(course.teacher_no).name %>
                    </p>
                </div>
            </li>
        <% end %>
    </ul>
</div>

