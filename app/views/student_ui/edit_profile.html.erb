<%= link_to :'Home', :controller => :student_ui,  :action => :index %><br>
<%= link_to :'My Profile', :controller => :student_ui,  :action => :my_profile %><br>
<%= link_to :'Edit Profile', :controller => :student_ui,  :action => :edit_profile %><br>
<%= link_to :'All Courses', :controller => :student_ui,  :action => :all_courses %><br>
<%= link_to :'My Courses', :controller => :student_ui,  :action => :my_courses %><br>

<%= link_to :'Logout', :controller => :sessions,  :action => :logout %><br>

<h1>Update Profile</h1>
<%= form_tag(:action => 'edit_profile_control') do %>
    <p>
      Profile Image : <%= image_tag(@student.profil_image, :size => "64x64", :alt => "Show Group") %> <%= file_field_tag(:profil_image) %>
    </p>

    <p>
      Student Number: <%= text_field_tag(:student_number, @student.student_number) %>
    </p>

    <p>
      Name: <%= text_field_tag :name, @student.name %>
    </p>

    <p>
      Password: <%= password_field_tag :password, @student.password %>
    </p>

    <p>
      E-mail: <%= text_field_tag :email, @student.email %>
    </p>

    <%= submit_tag('Update') %>
<% end %>