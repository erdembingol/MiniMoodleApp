        <li><%= link_to :'Logout', :controller => :sessions,  :action => :logout %></li>
    </ul>
</div>
<br clear="left"/>

<%= image_tag(@student.profil_image, :size => "64x64", :alt => "Show Group") %>

<div class="container_big">
<%= form_tag(:action => 'edit_profile_control') do %>
    <label>Profil Image:</label>
    <%= file_field_tag(:profil_image) %>

    <label>Student Number:</label>
    <%= text_field_tag(:student_number, @student.student_number) %>

    <label>Name:</label>
    <%= text_field_tag :name, @student.name %>

    <label>E-mail:</label>
    <%= text_field_tag :email, @student.email %>

    <label>Password:</label>
    <%= password_field_tag :password, @student.password %>

    <%= submit_tag('Update') %>
<% end %>
</div>