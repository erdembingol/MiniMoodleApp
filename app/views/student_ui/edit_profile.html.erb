        <li><%= link_to :'My Profile', :controller => :student_ui,  :action => :my_profile %></li>
        <li><%= link_to :'Edit Profile', :controller => :student_ui,  :action => :edit_profile %></li>
        <li><%= link_to :'All Courses', :controller => :student_ui,  :action => :all_courses %></li>
