<div class="menu">
    <ul>
        <li><%= link_to :Login , :login, class: "nav_links"%></li>
        <li><%= link_to :Signup , :signup, class: "nav_links"%></li>
    </ul>
</div>

<div class="container_big">
    <%= form_tag(:action => 'signup_control') do %>
        <label>Student Number:</label>
        <%= text_field_tag(:student_number) %>

        <label>Name:</label>
        <%= text_field_tag(:name) %>

        <label>Password:</label>
        <%= password_field_tag(:password) %>

        <label>E-mail:</label>
        <%= text_field_tag(:email) %>

        <label>Profil Image:</label>
        <%= file_field_tag(:profil_image) %>

        <%= submit_tag("Sign Up") %>
    <% end %>
</div>